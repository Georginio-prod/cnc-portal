generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  address      String        @id @unique
  name         String?
  transactions Transaction[]
  companies        Company[]
}
model Company {
  id           Int           @id @default(autoincrement())
  employees    Employee[]
  owner        User          @relation(fields: [ownerId], references: [address])
  ownerId      String
  description  String?
  name         String        @unique
  transactions Transaction[]
}
model Employee{
  id            Int           @id @default(autoincrement())
  name          String         
  walletAddress String
  company       Company? @relation(fields: [companyId], references: [id])  // Add the opposite relation field here
  companyId     Int?    // Nullable because an employee may not belong to a company initially

}
model Transaction {
  id            Int      @id @default(autoincrement())
  author        User     @relation(fields: [authorId], references: [address])
  authorId      String
  company          Company     @relation(fields: [companyId], references: [id])
  companyId        Int
  hash          String
  senderAddress String
  members       String[]
  type          String
  value         String
}